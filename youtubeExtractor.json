  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["health"]
        },
        "description": "Check if the server is running and view temp directory status"
      },
      "response": []
    },
    {
      "name": "Extract Clip - Short (10 seconds)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"youtubeUrl\": \"https://www.youtube.com/watch?v=dQw4w9WgXcQ\",\n  \"startTime\": 10,\n  \"endTime\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/extract-clip",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "extract-clip"]
        },
        "description": "Extract a 10-second clip from a YouTube video"
      },
      "response": []
    },
